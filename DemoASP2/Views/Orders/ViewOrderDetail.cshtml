@model DemoASP2.Models.Order

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>No.</th>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @{var row = 0;}
            @foreach (var item in Model.OrderDetails)
            {

                <tr>
                    <td>@(++row) </td>
                    <td>@item.product.ProductName</td>
                    <td>@item.UnitPrice</td>
                    <td>@item.Quantity</td>
                    <td>@item.Total</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4" class="text-right">Sub Total</td>
                <td>@String.Format("{0:0,0.00}", @Model.SubTotal)</td>
            </tr>
            <tr>
                <td colspan="4" class="text-right">Vat 7%</td>
                <td>@String.Format("{0:0,0.00}", @Model.VatAmount)</td>
            </tr>
            <tr>
                <td colspan="4" class="text-right"><strong>Net Total</strong></td>
                <td>
                    <strong>@String.Format("{0:0,0.00}", @Model.NetTotal)</strong>
                </td>
            </tr>
        </tfoot>
    </table>
</div>
